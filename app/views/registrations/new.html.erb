<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @user,url: 'new_user_registration_path' do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.text_field :password %>

			<%= f.label :password_confirmation %>
			<%= f.text_field :password_confirmation %>

			<%= f.submit "Create Account" %>
		<% end %>

	</div>
</div>